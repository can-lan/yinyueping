/*评论歌曲信息*/
.commentSong{
  width:100%;
  height:125rpx;
  padding:15rpx 15rpx 0;
  display:flex;
}
.commentSong>image{
  width:110rpx;
  height:110rpx;
  border-radius:6rpx;
}
.commentSong>view{
  height:110rpx;
  display:flex;
  flex-direction:column;
  padding:15rpx 20rpx 0;
}
.uname{
  font-size:12px;
  color:#ddd;
  margin-top:20rpx;
}
/*精彩评论标题*/
.bg-title{
  width:100%;
  height:40rpx;
  font-size:11px;
  line-height:40rpx;
  padding-left:15rpx;
  background:rgba(126,162,172,.3);
}
/*评论内容区*/
.comments{
  width:100%;
  display:flex;
  font-size:12px;
  padding:5rpx 15rpx 15rpx;
}
.comments>image{
  width:90rpx;
  height:90rpx;
  border-radius:50%;
  margin-right:15rpx;
}
.commentInfo{
  width:95%;
  height:90rpx;
  display:flex;
  margin-top:10rpx;
  justify-content:space-between;
}
.userTime{
  display:flex;
  flex-direction:column;
}
.userTime>text:last-child{
  font-size:10px;
  color:#eee;
  margin-top:10rpx;
}
.up>image{
  width:30rpx;
  height:30rpx;
  margin-left:10rpx;
  vertical-align:middle;
  margin-bottom:5rpx;
}
.commentText{
  width:95%;
  padding-bottom:20rpx;
  border-bottom:1px solid rgba(204,204,204,.5);
}