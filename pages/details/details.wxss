page{
  padding-bottom:100rpx;
}
/*歌单信息*/
.details{
  display:flex;
  padding:10rpx;
}
.details>image{
  width:200rpx !important;
  height:200rpx;
  border-radius:10rpx;
}
.sheetInfo{
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  padding:20rpx 40rpx 0;
  font-size:13px;
  color:#eee;
  padding-right:10rpx;
}
.sheetInfo image{
  width:50rpx;
  height:50rpx;
  border-radius:50%;
  vertical-align:middle;
  margin-right:15rpx;
  margin-bottom:20rpx;
}
.title{
  font-size:14px;
  font-weight:500;
  color:#fff;
}
/*工具条*/
.toolbar{
  width:100%;
  display:flex;
  justify-content:space-around;
  padding-bottom:25rpx;
}
.toolbar view{
  display:flex;
  flex-direction:column;
  font-size:10px;
  text-align:center;
  margin-top:25rpx;
}
.toolbar image{
  width:35rpx;
  height:35rpx;
  margin-bottom:10rpx;
}